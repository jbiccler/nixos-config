# terminal emulator
super + Return
  alacritty

super + @space
	rofi -show drun

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
# super + {_,shift + }w
super + {_,shift + }x
  bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node on desktop
super + g
	bspc node -s biggest.local

# swap the current node and the biggest node
super + shift + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# focus/swap

# move node in the given direction
super + shift + {h,j,k,l}
    dir={west,south,north,east}; \
    bspc node -s "$dir.local" --follow \
        || bspc node -m "$dir" --follow

super + shift + {Left,Down,Up,Right}
    dir={west,south,north,east}; \
    bspc node -s "$dir.local" --follow \
        || bspc node -m "$dir" --follow

# focus the node in the given direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

super + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
#super + {_,shift + }{1,2,3,4,5,6,7,8,9,0}
#	bspc {desktop -f,node -d} {1,2,3,4,5,6,7,8,9,0}

super + {_,shift + } {2,1,3} ; {1-9,0}
    bspc {desktop -f, node -d} "^{1,2,3}:^{1-9,10}" --follow

# show help
super + slash
  bash ~/.config/sxhkd/sxhkd-help.sh

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

super + shift + p
    bspc node -n last.!automatic



# move/resize
super + alt + {h,j,k,l}
	{bspc node -z right -20 0; \
	bspc node -z left +20 0, \
	bspc node -z top 0 -20; \
	bspc node -z bottom 0 +20, \
	bspc node -z top 0 +20; \
	bspc node -z bottom 0 -20, \
	bspc node -z right +20 0; \
	bspc node -z left -20 0}

# move/resize
super + alt + {Left,Down,Up,Right}
	{bspc node -z right -20 0; \
	bspc node -z left +20 0, \
	bspc node -z top 0 -20; \
	bspc node -z bottom 0 +20, \
	bspc node -z top 0 +20; \
	bspc node -z bottom 0 -20, \
	bspc node -z right +20 0; \
	bspc node -z left -20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Rotate tree
alt + {_,shift}Tab
    bspc node @/ -C {forward,backward}


#####
# scratchpad
# https://github.com/noctuid/tdrop
# https://my-take-on.tech/2020/07/03/some-tricks-for-sxhkd-and-bspwm/
#####

# negative -w arg to account for a border width (default: 100%)
alt + 1
    tdrop -ma -w 50% -h 50% -y 16 -x 25% alacritty --class=tdrop -t tdrop

#alt + 2
#	"$HOME"/.config/bspwm/bspwm-toggle-visibility.sh keepassxc

#alt + 3
#	"$HOME"/.config/bspwm/bspwm-toggle-visibility.sh streamlink-twitch-gui

# negative -w arg to account for a border width (default: 100%)
#alt + 4
#    tdrop -m -w 50% -h 50% -y 16 -x 25% keepassxc --class=keepasxc -t tdrop

alt + 2
	tdrop -ma -a -w 50% -h 50% -y 16 -x 25% -n 1 current

alt + 3
	tdrop -ma -a -w 50% -h 50% -y 16 -x 25% -n 2 current

alt + 4
	tdrop -ma -a -w 50% -h 50% -y 16 -x 25% -n 3 current

alt + 5
	tdrop -ma -a -w 50% -h 50% -y 16 -x 25% -n 4 current

alt + ctrl + 2
	tdrop -n 1 --clear current

alt + ctrl + 3
	tdrop -n 2 --clear current

alt + ctrl + 4
	tdrop -n 3 --clear current

alt + ctrl + 5
	tdrop -n 4 --clear current

#
# Media keys
#

# volume up
XF86AudioRaiseVolume
	volume up

# volume down
XF86AudioLowerVolume
	volume down

# volume mute
XF86AudioMute
	volume mute

# decrease brightness
XF86MonBrightnessDown
 light -U 5

# increase brightness
XF86MonBrightnessUp
 light -A 5

# suspend / sleep
XF86Sleep
	systemctl suspend

# take screenshot
super + shift + s
	flameshot gui -p ~/Pictures/Screenshots/

# Toggle compositing
super + ctrl + space
	{pkill picom ,\
	picom -b }

